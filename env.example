# Configuración de Base de Datos
DB_ROOT_PASSWORD=your_root_password_here
DB_NAME=lcc_ot_db
DB_USER=lcc_ot_user
DB_PASSWORD=your_db_password_here
DB_HOST=db
DB_PORT=3306

# Configuración de Django
DJANGO_SETTINGS_MODULE=web.settings_dev  # Cambiar a web.settings_prod para producción
SECRET_KEY=your_secret_key_here

# Credenciales de Superusuario (CAMBIAR EN PRODUCCIÓN)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# Configuración de Seguridad para Producción
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,https://localhost
SECURE_SSL_REDIRECT=False

# Configuración de Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook
TELEGRAM_ADMIN_CHAT_ID=123456789

# Configuración de seguridad del bot
BOT_SECURITY_ENABLED=True
BOT_DEBUG=False

# Configuración de usuario para Docker (evitar problemas de permisos)
UID=1000
GID=1000
